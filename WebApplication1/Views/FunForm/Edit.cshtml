@model WebApplication1.Models.FunForm

@{
    ViewData["Title"] = "Edit your Info";
}

<h1>@ViewData["Title"]</h1>

@if (Model == null){
    <h1>No results were found with this ID.</h1>
}
@if (Model != null){
    <form method="post">
        <img src="https://media1.tenor.com/m/PAc8ut1nfkkAAAAC/bet-button.gif" style="float: right; border-radius: 40%;" width="320" height="222">
        <div class="mt-3 col-sm-5">
            <label class="form-label" for="name">Name</label>
            <input type="text" class="form-control" placeholder="Who are you?" id="name" asp-for="Name"/>
        </div>
        <div class="mt-3 col-sm-5">
            <label class="form-label" for="dob">Date of Birth</label>
            <input type="date" class="form-control" id="dob" asp-for="DoB"/>
        </div>
        <div class="mt-3 col-sm-5">
            <label class="form-label" for="phone">Phone Number</label>
            <input type="text" class="form-control" placeholder="[0-9]{10}" id="phone" maxlength="10" asp-for="PhoneNumber"/>
        </div>
        <img src="https://data.textstudio.com/output/sample/animated/5/2/9/5/your-2-5925.gif" style="float: right; border-radius: 40%;" width="200" height="100">
        <div class="mt-3 col-sm-5">
            <label class="form-label" for="occu">Occupation</label>
            <input type="text" class="form-control" placeholder="Human" id="occu" asp-for="Occupation"/>
        </div>
        <div class="mt-3 col-sm-5">
            <label class="form-label" for="Acc">Bank Account</label>
            <input type="text" class="form-control" placeholder="Money for good deeds" id="Acc" asp-for="BankAccounts"/>
        </div>
        <img src="https://i.pinimg.com/originals/4d/68/cd/4d68cd156b67ed38303691834e7a9628.gif" style="float: right;" width="300" height="300">
        <div class="mt-3 col-sm-5">
            <input type="checkbox" class="form-check-input" id="Yes" asp-for="Question"/>
            <label class="form-check-label" for="Yes">Are you certain that your account is accurate?</label>
        </div>
        <br />
        <div class="mt-3 col-sm-5">
            <label class="form-label">Comments</label>
            <textarea rows="4" cols="70" placeholder="Please do not let this comments empty!" asp-for="Comments"></textarea>
        </div>
        <div class="mt-3 col-sm-5">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger" style="border-radius: 10%;" asp-controller="FunForm" asp-action="Delete">Delete</button>
        </div>
    </form>
}

